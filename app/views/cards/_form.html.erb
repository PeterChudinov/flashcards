<%= simple_form_for @deck, url: { controller: 'cards', action: 'create' }, method: :post do |d| %>
  <%= d.simple_fields_for(@card) do |f| %>
    <% @card.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    <p>
      <%= f.label :deck %><b>: </b><%= @deck.name %>
    </p>

    <p>
      <%= f.label :original_text %><br>
      <%= f.text_field :original_text %>
    </p>

    <p>
      <%= f.label :translated_text %><br>
      <%= f.text_field :translated_text %>
    </p>

    <p>
      <p>
        <b><%= t('activerecord.attributes.card.current_image') %></b>
        <%= image_tag @card.image.url(:medium) %>
      </p>
      <%= f.input :image, as: :file %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>
<% end %>