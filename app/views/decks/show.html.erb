<table>
  <thead>
    <tr>
    <th><%= t('views.card.index.image') %></th>
    <th><%= t('views.card.index.original') %></th>
    <th><%= t('views.card.index.translated') %></th>
    <th><%= t('views.card.index.last_review') %></th>
    <th></th><th></th>
    </tr>
  </thead>

  <tbody>
    <% @deck.cards.each do |card| %>
      <tr>
        <td><%= image_tag card.image.url(:thumb) %></td>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= formated_time(card.review_date) %></td>
        <td><%= link_to t('views.card.index.edit'), edit_card_path(card) %></td>
        <td><%= link_to t('views.card.index.delete'), card, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% link_to t('decks.show.add_card'), edit_deck_path(@deck) %>