<table>
  <thead>
    <tr>
    <th><%= t('views.card.index.image') %></th>
    <th><%= t('views.card.index.original') %></th>
    <th><%= t('views.card.index.translated') %></th>
    <th><%= t('views.card.index.last_review') %></th>
    <th></th><th></th>
    </tr>
  </thead>

  <tbody>
    <% @deck.cards.each do |card| %>
      <tr>
        <td><%= image_tag card.image.url(:thumb) %></td>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= formated_time(card.review_date) %></td>
        <td><%= link_to t('views.card.index.edit'), edit_deck_card_path(@deck.id, card) %></td>
        <td><%= link_to t('views.card.index.delete'), remove_card_from_deck_path(card), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= simple_form_for @deck do |f| %>
  <%= select_tag :card_id, options_from_collection_for_select(@cards, 'id', 'original_text') %>
  <%= button_to 'add card', add_card_to_deck_path %>
<% end %>