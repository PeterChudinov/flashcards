<!DOCTYPE html>
<html>
<head>
  <title>Flashcards</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section id="container">
    <div class = "navbar navbar-default navbar-fixed-top">
      <header class="clearfix">
        <h1><%= link_to 'Флэшкарточкер', root_path %></h1>
        <ul class="navigation-links">
          <li><%= link_to 'Все карточки', cards_path %></li>
          <li><%= link_to 'Добавить карточку', new_card_path %></li>
          <% if current_user %>
            <li><%= link_to "#{current_user.email}", user_path(current_user) %>
            <li><%= link_to 'Выйти', logout_path, method: :post %></li>
          <% else %>
            <li><%= link_to 'Войти', signin_path %></li>
            <li><%= link_to 'Регистрация', signup_path %></li>
          <% end %>
        </ul>
      </header>
    </div>

    <%= flash_messages %>
    <%= yield %>

  </section>

</body>
</html>
