<%= simple_form_for(@card = Card.find(2399), :url => trainer_test_path, :method => :post) do |f| %>

  <center>
    <p><%= f.label "А ты помнишь перевод этого слова?" %></p>
    <p style="font-size: 18px;"><%= f.label @card[:translated_text] %></p>
    <p><%= text_field_tag :user_input %></p>
    <p><%= button_to "Проверка", :controller => 'trainer', :action => 'test', params: { id: @card.id } %></p>
  </center> 
<% end %>