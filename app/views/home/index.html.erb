<body>
  <section>
    <% if @card %>
      <%= simple_form_for @card, url: trainer_review_path(@card), method: :post do |f| %>
        <center>
          <p><%= label_tag t('views.home.trainer.quiz') %> <%= @card[:translated_text] %></p>
             <% if @card.image.file? %>
          <p><%= image_tag @card.image.url(:medium) %></p>
             <% end %>
          <p><%= f.input 'response', as: :fake %></p>
          <p><%= f.submit t('views.home.trainer.submit') %></p>
      <% end %>
    <% else %>
          <p><%= t('views.home.trainer.no_more_cards') %></p>
    <% end %>
        </center>
  </section>
</body>